<Application x:Class="CRMSystem.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- CRMSystem generic resource dictionaries -->
                <ResourceDictionary Source="pack://application:,,,/Styles/Generic/Converters.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/Generic/Brushes.xaml"/>
                <!-- CRMSystem controls resource dictionaries -->
                <ResourceDictionary Source="pack://application:,,,/Styles/Controls/GroupBox.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/Controls/Button.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
